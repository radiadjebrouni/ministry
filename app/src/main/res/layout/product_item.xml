<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativl"
    android:layout_width="170dp"
    android:clickable="true"

    android:layout_height="235dp"
    android:background="@drawable/cadre_article"
    android:outlineAmbientShadowColor="@android:color/darker_gray">

    <LinearLayout
        android:layout_marginHorizontal="17dp"
        android:layout_marginVertical="19dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_id"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/chaise"

            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title_id"

            android:textSize="15sp"
            android:textColor="@color/colorText"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nom"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:orientation="horizontal"
        >


        <ImageButton
            android:id="@+id/modifier_article"
            android:layout_width="28dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="10dp"



            android:src="@drawable/modifier_article_icon"/>

        <ImageButton
            android:id="@+id/supprimer_article"
            android:layout_width="28dp"
            android:layout_height="35dp"
            android:src="@drawable/supprimer_article_icon"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
