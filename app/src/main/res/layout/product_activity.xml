<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:layout_marginTop="20dp"

        android:orientation="vertical">




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp">


           <!-- <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chaise"
                />
                -->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_product"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                >

            </androidx.viewpager.widget.ViewPager>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabMaxWidth="10dp" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/click_fav"
                android:clickable="true"

                android:layout_width="40dp"

                android:gravity="center_horizontal"
                android:layout_height="45dp"
                android:textOff=""
                android:textOn=""
                android:src="@drawable/bouton_favorit_grand_des"
                android:focusable="true" />
            <View
                android:id="@+id/divider2"
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_weight=".70"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />



        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"

                android:layout_height="match_parent"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/nom_du_service"
                            android:layout_marginRight="10dp"

                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/nom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="Nom "


                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="3dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="@color/cardview_dark_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/type"
                            android:layout_marginRight="10dp"

                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="Nom "


                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="3dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="@color/cardview_dark_background" />


                    <LinearLayout
                        android:id="@+id/click_audio_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/description_product"
                            android:layout_marginRight="10dp"

                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_play_arrow_black_24dp"/>
                    </LinearLayout>


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="@string/description_product"
                        android:layout_marginRight="10dp"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="3dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="@color/cardview_dark_background" />


                    <LinearLayout
                        android:id="@+id/click_afficher_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:focusable="true">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/adresse_produit"
                            android:layout_marginRight="10dp"

                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_location_on_black_24dp"/>
                    </LinearLayout>


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"

                        android:layout_marginVertical="10dp"
                        android:text="@string/propri_taire"


                        android:textColor="@color/colorText"
                        android:textSize="21sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/nom_proprietaire"
                            android:layout_marginRight="10dp"

                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/nom_proprietaire"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="Nom "


                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="3dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="@color/cardview_dark_background" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/email"
                            android:layout_marginRight="10dp"

                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/email_proprietaire"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="Nom "


                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="3dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="@color/cardview_dark_background" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/num_t_l"
                            android:layout_marginRight="10dp"

                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/num_tel_proprietaire"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="067869809UOUU "


                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="15sp" />
                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />
        <TextView
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_weight=".30"
            android:layout_height="wrap_content"
            android:text="GRATUIT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/click_signaler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="70dp"
            android:layout_marginTop="7dp"
            android:clickable="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signaler"

                />
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/signaler"
                />
        </LinearLayout>

        <Button
            android:id="@+id/appeler"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/Contacter" />

    </LinearLayout>

</LinearLayout>
